{
  "compilerOptions": {
    "baseUrl": "./",
    "resolveJsonModule": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "ES6",
    "outDir": "dist"
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["node_modules", "**/__tests__"]
}
